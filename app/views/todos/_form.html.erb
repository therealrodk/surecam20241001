<%= form_with(url: create_todo_path, method: :post, local: true) do |form| %>
  <div>
    <%= form.label :user_id, "Your User ID: #{ current_user.id }", class: "block" %>
    <%= form.hidden_field :user_id, value: current_user.id %>
  </div>

  <div>
    <%= form.label :title, class: "block mt-2" %>
    <%= form.text_field :title, class: "w-full", required: true %>
  </div>

  <div>
    <%= form.label :completed, "Status", class: "block mt-2" %>
    <%= form.select :completed, [%w[Incomplete false], %w[Complete true]] %>
  </div>

  <div class="text-center mt-8">
    <%= form.submit "Submit", class: "bg-blue-200 rounded px-4 py-2" %>
  </div>
<% end %>

